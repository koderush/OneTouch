<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:stretchColumns="0,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_span="3"
                android:text="Sending SMS in one punch "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#414141"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_0_0"
                android:onClick="onClickButton_0_0"
                android:layout_column="0"
                android:minHeight="120dp"
                android:text="Arriving work"
                android:background="#ffffaa4a"/>

            <Space
                android:layout_width="20px"
                android:layout_height="match_parent"
                android:layout_column="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Leaving work"
                android:id="@+id/button_0_1"
                android:layout_column="2"
                android:background="#fff9ed56"
                android:minHeight="120dp"
                android:onClick="onClickButton_0_1" />
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Near pick up"
                android:id="@+id/button_1_0"
                android:layout_column="0"
                android:minHeight="120dp"
                android:onClick="onClickButton_1_0"
                android:background="#ff5d90" />

            <Space
                android:layout_width="20px"
                android:layout_height="match_parent"
                android:layout_column="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="At parking lot"
                android:id="@+id/button_1_1"
                android:layout_column="2"
                android:background="#ff35ff55"
                android:minHeight="120dp"
                android:onClick="onClickButton_1_1" />
        </TableRow>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bad traffic"
                android:id="@+id/button_2_0"
                android:layout_column="0"
                android:minHeight="120dp"
                android:onClick="onClickButton_2_0"
                android:background="#ffb62a24" />

            <Space
                android:layout_width="20px"
                android:layout_height="match_parent"
                android:layout_column="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Arriving home"
                android:id="@+id/button_2_1"
                android:layout_column="2"
                android:background="#ff2393e4"
                android:minHeight="120dp"
                android:onClick="onClickButton_2_1" />
        </TableRow>

        <Space
            android:layout_width="20px"
            android:layout_height="10dp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_column="1"
            android:minHeight="25dp"
            android:longClickable="false" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewInfo"
                android:layout_column="0"
                android:singleLine="false"
                android:text="..."
                android:layout_gravity="right"
                android:layout_span="3" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ver 0.0.0"
                android:id="@+id/textViewVersion"
                android:layout_column="0"
                android:singleLine="false"
                android:layout_gravity="right"
                android:layout_span="3" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
